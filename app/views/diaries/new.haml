.diaries_new
  .diaries_new__header
    = render partial: './component/header'

  .diaries_new__box
    .diaries_new__box__form
      -# ===================================================
      -# ====================== 日記 ======================
      -# ===================================================
      = form_with model: @diary,local: true do |f|
        .diaries_new__box__form--title
          %p タイトル
          = f.text_field :title, {placeholder: "題名"}
        .diaries_new__box__form--text
          %p 本文
          = f.text_field :text, {placeholder: "本文を書こう"}
        .diaries_new__box__form--image
          %p 画像
          = f.file_field :image
          -# ===================================================
          -# ====================== 家計簿 ======================
          -# ===================================================
          = f.fields_for :spend do |k|




        .diaries_new__box__form--submit
          = f.submit "投稿"

  .diaries_new__footer
    = render partial: './component/footer'